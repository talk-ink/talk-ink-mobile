{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@assets/*": ["src/assets/*"],
        "@components/*": ["src/components/*"],
        "@navigations/*": ["src/navigations/*"],
        "@screens/*": ["src/screens/*"],
        "@utils/*": ["src/utils/*"],
        "@customTypes/*": ["src/types/*"],
        "@store/*": ["src/store/*"],
        "@hooks/*": ["src/hooks/*"]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }